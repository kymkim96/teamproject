<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="bookswriters">
	<select id="selectWnameByIsbn" resultType="book_wname">
		select 
		    isbn, wname
		from books b, books_writers bw, writers w
		where 
		    b.isbn = bw.books_isbn
		    and bw.writers_wid = w.wid
		    and isbn=#{isbn}
	</select>

	<insert id="insert" parameterType="bookwriter">
		insert into books_writers 
		(books_isbn, writers_wid)
		values 
		(#{booksIsbn}, #{writersWid})
	</insert>
</mapper>